<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/surface_color"
        android:elevation="12dp"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/add_bill"
        android:src="@drawable/ic_add_bill"
        app:backgroundTint="@color/primary_color"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@color/primary_color_ripple"
        app:tint="@color/white"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:shapeAppearanceOverlay="@style/FloatingActionButtonRounded" />

    <FrameLayout
        android:id="@+id/fab_container"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="28dp" />

</merge>