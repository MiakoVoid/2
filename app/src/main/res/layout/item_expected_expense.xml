<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="expectedExpense"
            type="com.example.greenfinance.model.ExpectedExpense" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/surface_color"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- 分类图标 -->
            <ImageView
                android:id="@+id/iv_category_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_category_icon"
                android:padding="8dp"
                android:src="@drawable/ic_category_food"
                app:tint="@color/primary_color"
                tools:ignore="ContentDescription" />

            <!-- 支出信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 商户名称 -->
                <TextView
                    android:id="@+id/tv_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{expectedExpense.merchant}"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="麦当劳" />

                <!-- 备注 -->
                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{expectedExpense.remark}"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="@{expectedExpense.remark.empty ? View.GONE : View.VISIBLE}"
                    tools:text="午餐费用"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- 金额 -->
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:text="@{`¥` + expectedExpense.amount}"
                android:textColor="@color/expense_color"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="¥128.00" />

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 确认按钮 -->
                <ImageButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_check"
                    app:tint="@color/success_color"
                    tools:ignore="ContentDescription" />

                <!-- 删除按钮 -->
                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/error_color"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
