<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_surface">

    <!-- 顶部导航与分类容器一体化设计 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
      >

        <!-- 顶部导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="返回"
                    android:padding="4dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_expense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="支出"
                    android:textColor="@color/expense_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableBottomCompat="@drawable/selector_tab_indicator" />

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="收入"
                    android:textColor="@color/income_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableBottomCompat="@drawable/selector_tab_indicator" />

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="编辑"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- 动态分类容器（扩大高度并优化滑动体验） -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categories"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                tools:listitem="@layout/item_category" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 中间内容区（商户、备注、金额） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <!-- 商户名称输入区 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商户名称"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入商户名称"
                    android:inputType="text"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:id="@+id/layout_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="日期"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="今天"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 备注输入区（纯输入，无侧边金额） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingHorizontal="16dp">

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="添加备注"
                    android:inputType="text"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 金额显示区（单独成行，居中展示） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_amount_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0.00"
                    android:textColor="@color/expense_color"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- 数字输入器区（固定底部，大小固定） -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="12dp">

            <!-- 第一行数字键 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_number_1"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_2"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_3"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/btn_delete"
                    style="@style/NumberSpecialButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:contentDescription="删除"
                    android:scaleType="center"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/text_primary" />
            </LinearLayout>

            <!-- 第二行数字键 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_number_4"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_5"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_6"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_subtract"
                    style="@style/NumberOperatorButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- 第三行数字键 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_number_7"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_8"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_9"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_add"
                    style="@style/NumberOperatorButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- 第四行数字键 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_record_again"
                    style="@style/NumberSpecialButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="再记"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_number_0"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_decimal_point"
                    style="@style/NumberButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_save"
                    style="@style/NumberOperatorButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="保存"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
